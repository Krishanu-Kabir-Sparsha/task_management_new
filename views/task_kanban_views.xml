<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Kanban View -->
    <record id="view_task_management_kanban" model="ir.ui.view">
        <field name="name">task.management.kanban</field>
        <field name="model">task.management</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" class="o_kanban_small_column" on_create="quick_create" quick_create_view="task_management.view_task_management_form_quick_create">
                <field name="stage_id" options='{"group_by_tooltip": {"description": "Description"}}'/>
                <field name="color"/>
                <field name="priority"/>
                <field name="user_id"/>
                <field name="partner_id"/>
                <field name="kanban_state"/>
                <field name="is_closed"/>
                <field name="active"/>
                <field name="tag_ids"/>
                <field name="date_deadline"/>
                <field name="progress"/>
                <progressbar field="kanban_state" colors='{"done": "success", "blocked": "danger", "normal": "muted"}'/>
                <templates>
                    <t t-name="kanban-menu">
                        <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                        <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                    </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_dropdown_kanban dropdown">
                                        <a role="button" class="dropdown-toggle o-no-caret btn" data-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                            <span class="fa fa-ellipsis-v"/>
                                        </a>
                                        <div class="dropdown-menu" role="menu">
                                            <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                                            <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                                            <div role="separator" class="dropdown-divider"/>
                                            <ul class="oe_kanban_colorpicker" data-field="color"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                    <div t-if="record.partner_id.value" class="o_kanban_record_subtitle">
                                        <field name="partner_id"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="priority" widget="priority" groups="base.group_user"/>
                                        <field name="activity_ids" widget="kanban_activity"/>
                                        <t t-if="record.date_deadline.raw_value and !record.is_closed.raw_value">
                                            <span t-attf-class="#{record.date_deadline.raw_value &lt; (new Date()).toJSON().slice(0, 10) ? 'text-danger' : ''}">
                                                <i class="fa fa-clock-o" title="Deadline"/>
                                                <field name="date_deadline" widget="date"/>
                                            </span>
                                        </t>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="kanban_state" widget="state_selection" groups="base.group_user"/>
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_progressbar" t-if="record.progress.raw_value">
                                    <field name="progress" widget="progressbar" options="{'current_value': 'progress', 'max_value': 100}"/>
                                </div>
                            </div>
                            <div class="oe_clear"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Quick Create Form -->
    <record id="view_task_management_form_quick_create" model="ir.ui.view">
        <field name="name">task.management.form.quick.create</field>
        <field name="model">task.management</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" placeholder="Task Title..."/>
                    <field name="user_id" widget="many2one_avatar_user"/>
                    <field name="date_deadline"/>
                </group>
            </form>
        </field>
    </record>
</odoo>