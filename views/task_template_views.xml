<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Task Template list View -->
    <record id="view_task_template_list" model="ir.ui.view">
        <field name="name">task.template.list</field>
        <field name="model">task.template</field>
        <field name="arch" type="xml">
            <list string="Task Templates">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="planned_hours" widget="float_time"/>
                <field name="priority" widget="priority"/>
                <field name="usage_count"/>
                <field name="last_used_date"/>
                <button name="action_use_template" type="object" string="Use Template" class="btn-primary" icon="fa-plus"/>
            </list>
        </field>
    </record>

    <!-- Task Template Form View -->
    <record id="view_task_template_form" model="ir.ui.view">
        <field name="name">task.template.form</field>
        <field name="model">task.template</field>
        <field name="arch" type="xml">
            <form string="Task Template">
                <header>
                    <button name="action_use_template" type="object" string="Create Task from Template" class="btn-primary"/>
                    <button name="action_view_tasks" type="object" string="View Created Tasks" class="btn-secondary" invisible="usage_count == 0"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_tasks" type="object" class="oe_stat_button" icon="fa-tasks">
                            <field name="usage_count" widget="statinfo" string="Tasks Created"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active == True"/>
                    
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Template Name..."/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="user_id" widget="many2one_avatar_user"/>
                            <field name="priority" widget="priority"/>
                            <field name="planned_hours" widget="float_time"/>
                        </group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            <field name="last_used_date" readonly="1"/>
                            <field name="active"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Description Template">
                            <field name="description" widget="html" options="{'collaborative': true}"/>
                        </page>
                        <page string="Subtask Templates">
                            <field name="subtask_template_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="description"/>
                                </list>
                            </field>
                        </page>
                        <page string="Checklist">
                            <field name="checklist_template" placeholder="Enter checklist items..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Task Template Kanban View -->
    <record id="view_task_template_kanban" model="ir.ui.view">
        <field name="name">task.template.kanban</field>
        <field name="model">task.template</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="user_id"/>
                <field name="priority"/>
                <field name="usage_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="user_id" widget="many2one_avatar_user"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="priority" widget="priority"/>
                                        <span class="badge badge-pill badge-info">
                                            <i class="fa fa-copy"/> <field name="usage_count"/>
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <button name="action_use_template" type="object" class="btn btn-sm btn-primary">
                                            <i class="fa fa-plus"/> Use
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Task Template Action -->
    <record id="action_task_template" model="ir.actions.act_window">
        <field name="name">Task Templates</field>
        <field name="res_model">task.template</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first task template!
            </p>
            <p>
                Templates help you quickly create similar tasks with predefined settings,
                descriptions, and subtasks.
            </p>
        </field>
    </record>
</odoo>